<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.main.life.child.CounselVideoConfirmActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/white">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar

                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원격 심리 상담"
                    android:layout_gravity="center"
                    android:id="@+id/toolbarTitle"
                    android:textColor="@color/titleColor"
                    android:textSize="18sp"
                    />

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ImageView
            android:id="@+id/counsel_image"
            android:layout_width="280dp"
            android:layout_height="187dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/img_yellow_logo"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#de000000"
            android:lineSpacingExtra="12sp"
            android:text="영상으로 상담 내용을 말씀해주세요."
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#de000000"
            android:lineSpacingExtra="12sp"
            android:text="준비가 되시면 상담시작 버튼을 눌러주세요."
            android:layout_marginTop="2dp"
            />

        <Button
            android:id="@+id/counselConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="상담 시작"
            android:textSize="15sp"
            android:lineSpacingExtra="13sp"
            android:textColor="@color/white"
            android:background="@drawable/rectangle_w310_r25_fill"/>


    </LinearLayout>
</layout>