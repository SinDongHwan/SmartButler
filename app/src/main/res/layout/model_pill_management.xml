<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/pill_name"
            android:layout_width="200dp"
            android:layout_height="28dp"
            android:text="혈압약"
            android:textSize="16sp"
            android:textColor="#de000000"
            android:lineSpacingExtra="12sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="17dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_delete"/>

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/btn_delete_n"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pill_name"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="약 성분"
        android:textSize="12sp"
        android:textColor="#afafaf"
        android:layout_marginTop="17dp"
        android:layout_marginStart="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:text="ZS프로펜, 프로비타민"
        android:textSize="14sp"
        android:textColor="#535353"
        android:background="@drawable/border_pill_management"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="복용 권고"
        android:textSize="12sp"
        android:textColor="#afafaf"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:text="스타틴과 함께 복용 금지"
        android:textSize="14sp"
        android:textColor="#535353"
        android:background="@drawable/border_pill_management"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="약품 복용 부작용"
        android:textSize="12sp"
        android:textColor="#afafaf"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:text="어지러움이나 두통을 호소할 수 있음."
        android:textSize="14sp"
        android:textColor="#535353"
        android:background="@drawable/border_pill_management"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="고혈압에 좋은 음식"
        android:textSize="12sp"
        android:textColor="#afafaf"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:text="토마토, 양파, 가지"
        android:textSize="14sp"
        android:textColor="#535353"
        android:background="@drawable/border_pill_management"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_yellow_n"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="15dp"/>


</LinearLayout>