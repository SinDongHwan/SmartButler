<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/deviceNameTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="안방tv"
        android:textColor="@color/black"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/deviceModeRightButton"
        android:background="@color/transparent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/deviceNameTextView"
        app:layout_constraintBottom_toBottomOf="@id/deviceNameTextView"
        android:text="그대로 유지"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/deviceNameTextView"
        android:background="@color/divider"
        app:layout_constraintLeft_toRightOf="@id/deviceModeRightButton"
        app:layout_constraintBottom_toBottomOf="@id/deviceNameTextView"
        app:layout_constraintRight_toLeftOf="@id/deviceModeLeftButton"/>

    <Button
        android:id="@+id/deviceModeLeftButton"
        android:background="@color/transparent"
        app:layout_constraintRight_toLeftOf="@id/deviceModeRightButton"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="@id/deviceNameTextView"
        app:layout_constraintBottom_toBottomOf="@id/deviceNameTextView"
        android:text="그대로 유지"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>
