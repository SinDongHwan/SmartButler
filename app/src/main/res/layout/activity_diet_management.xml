<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.main.life.child.DietManagementActivity"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar

                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="식단 관리"
                    android:layout_gravity="center"
                    android:id="@+id/toolbarTitle"
                    android:textColor="@color/titleColor"
                    android:textSize="18sp"
                    />

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_calorie_compute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="21dp"
            android:layout_marginEnd="21dp"
            android:background="@drawable/rectangle_calorie_compute"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appbar"
            >

            <LinearLayout
                android:id="@+id/layout_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="9dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/layout_sex"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="54dp"
                    android:layout_height="20dp"
                    android:textSize="14sp"
                    android:textColor="#6d7278"
                    android:lineSpacingExtra="14sp"
                    android:text="나이"
                    />

                <EditText
                    android:id="@+id/et_age"
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:textSize="14sp"
                    android:textColor="#6d7278"
                    android:lineSpacingExtra="14sp"
                    />

                <TextView
                    android:id="@+id/tv_age_dummy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#6d7278"
                    android:lineSpacingExtra="14sp"
                    android:text="세"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="9dp"
                android:layout_marginTop="9dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@+id/layout_age"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="54dp"
                    android:layout_height="20dp"
                    android:textSize="14sp"
                    android:textColor="#6d7278"
                    android:lineSpacingExtra="14sp"
                    android:text="성별"
                    />
                <Spinner
                    android:id="@+id/spinner_sex"
                    android:layout_width="70dp"
                    android:layout_height="24dp">

                </Spinner>

            </LinearLayout>

            <View
                android:id="@+id/line5"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@color/divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_age" />


            <LinearLayout
                android:id="@+id/layout_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="9dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line5">
                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_width="54dp"
                    android:layout_height="20dp"
                    android:textSize="14sp"
                    android:textColor="#6d7278"
                    android:lineSpacingExtra="14sp"
                    android:text="체중"
                    />

                <EditText
                    android:id="@+id/et_weight"
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:textSize="14sp"
                    android:textColor="#6d7278"
                    android:lineSpacingExtra="14sp"
                    />

                <TextView
                    android:id="@+id/tv_weight_dummy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#6d7278"
                    android:lineSpacingExtra="14sp"
                    android:text="kg"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_goal_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="@id/layout_sex"
                app:layout_constraintBottom_toBottomOf="@+id/layout_weight"
                app:layout_constraintTop_toTopOf="@id/layout_weight">
                <TextView
                    android:id="@+id/tv_goal_weight"
                    android:layout_width="54dp"
                    android:layout_height="20dp"
                    android:textSize="14sp"
                    android:textColor="#6d7278"
                    android:lineSpacingExtra="14sp"
                    android:text="목표체중"
                    />

                <EditText
                    android:id="@+id/et_goal_weight"
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:textSize="14sp"
                    android:textColor="#6d7278"
                    android:lineSpacingExtra="14sp"
                    />

                <TextView
                    android:id="@+id/tv_goal_weight_dummy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#6d7278"
                    android:lineSpacingExtra="14sp"
                    android:text="kg"
                    />

            </LinearLayout>

            <View
                android:id="@+id/line6"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@color/divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_weight" />

            <LinearLayout
                android:id="@+id/layout_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="9dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="9dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/layout_sex"
                app:layout_constraintTop_toBottomOf="@id/line6">
                <TextView
                    android:id="@+id/tv_activity"
                    android:layout_width="54dp"
                    android:layout_height="20dp"
                    android:textSize="14sp"
                    android:textColor="#6d7278"
                    android:lineSpacingExtra="14sp"
                    android:text="활동성"
                    />
                <Spinner
                    android:id="@+id/spinner_activity"
                    android:layout_width="70dp"
                    android:layout_height="24dp">

                </Spinner>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="@id/layout_calorie_compute"
            app:layout_constraintStart_toStartOf="@id/layout_calorie_compute"
            app:layout_constraintTop_toBottomOf="@+id/layout_calorie_compute" />

        <TextView
            android:id="@+id/tv_diet_record"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textSize="14sp"
            android:textColor="#afafaf"
            android:lineSpacingExtra="14sp"
            android:text="식단 기록"
            android:layout_marginTop="19dp"
            app:layout_constraintStart_toStartOf="@id/layout_calorie_compute"
            app:layout_constraintTop_toBottomOf="@id/line4"
            />

        <ImageView
            android:id="@+id/iv_morning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_morning"
            android:layout_marginTop="7dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintTop_toBottomOf="@id/tv_diet_record"
            app:layout_constraintStart_toStartOf="@+id/layout_calorie_compute"
            app:layout_constraintEnd_toStartOf="@id/iv_lunch"/>

        <ImageView
            android:id="@+id/iv_lunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_lunch"
            app:layout_constraintTop_toTopOf="@id/iv_morning"
            app:layout_constraintBottom_toBottomOf="@id/iv_morning"
            app:layout_constraintStart_toEndOf="@id/iv_morning"
            app:layout_constraintEnd_toStartOf="@id/iv_evening"/>

        <ImageView
            android:id="@+id/iv_evening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_evening"
            app:layout_constraintTop_toTopOf="@id/iv_morning"
            app:layout_constraintBottom_toBottomOf="@id/iv_morning"
            app:layout_constraintStart_toEndOf="@id/iv_lunch"
            app:layout_constraintEnd_toStartOf="@id/iv_diet_etc"/>

        <ImageView
            android:id="@+id/iv_diet_etc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_diet_etc"
            app:layout_constraintTop_toTopOf="@id/iv_morning"
            app:layout_constraintBottom_toBottomOf="@id/iv_morning"
            app:layout_constraintStart_toEndOf="@id/iv_evening"
            app:layout_constraintEnd_toEndOf="@id/layout_calorie_compute"/>

        <TextView
            android:id="@+id/tv_today_calorie"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:textSize="14sp"
            android:textColor="#afafaf"
            android:lineSpacingExtra="14sp"
            android:text="오늘 섭취 칼로리"
            android:layout_marginTop="29dp"
            app:layout_constraintTop_toBottomOf="@id/iv_morning"
            app:layout_constraintStart_toStartOf="@id/layout_calorie_compute"
            />

        <TextView
            android:id="@+id/tv_calorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#535353"
            android:lineSpacingExtra="14sp"
            android:gravity="end"
            android:text="0 kcal"
            app:layout_constraintEnd_toEndOf="@id/layout_calorie_compute"
            app:layout_constraintTop_toTopOf="@id/tv_today_calorie"
            app:layout_constraintBottom_toBottomOf="@id/tv_today_calorie"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_progress_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/layout_calorie_compute"
            app:layout_constraintEnd_toEndOf="@id/layout_calorie_compute"
            app:layout_constraintTop_toBottomOf="@id/tv_today_calorie">

            <View
                android:id="@+id/line1"
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"
                android:background="@color/divider"
                app:layout_constraintEnd_toStartOf="@id/calorieSeekBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <com.kau.smartbutler.controller.CustomProgressBar
                android:id="@+id/calorieSeekBar"
                android:layout_width="0dp"
                android:layout_height="14dp"
                android:max="100"
                android:progress="0"
                android:layout_centerInParent="true"
                android:progressDrawable="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <View
                android:id="@+id/line2"
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"
                android:background="@color/divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/calorieSeekBar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_calorie_zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#afafaf"
            android:lineSpacingExtra="18sp"
            android:text="0"
            app:layout_constraintTop_toBottomOf="@id/layout_progress_group"
            app:layout_constraintStart_toStartOf="@id/layout_progress_group"/>

        <TextView
            android:id="@+id/requiredCalorieSeekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#afafaf"
            android:lineSpacingExtra="18sp"
            android:text="1880"
            app:layout_constraintTop_toBottomOf="@id/layout_progress_group"
            app:layout_constraintEnd_toEndOf="@id/layout_progress_group"/>

        <ImageView
            android:id="@+id/rectRequired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rect_required"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@id/tv_calorie_zero"
            app:layout_constraintStart_toStartOf="@id/layout_calorie_compute"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#828282"
            android:lineSpacingExtra="16sp"
            android:text="하루 권장 칼로리"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@id/rectRequired"
            app:layout_constraintTop_toTopOf="@id/rectRequired"
            app:layout_constraintBottom_toBottomOf="@id/rectRequired"
            />

        <TextView
            android:id="@+id/requiredCalorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#535353"
            android:lineSpacingExtra="16sp"
            android:gravity="end"
            android:text="1880 kcal"
            app:layout_constraintEnd_toEndOf="@+id/layout_calorie_compute"
            app:layout_constraintTop_toTopOf="@id/rectRequired"
            app:layout_constraintBottom_toBottomOf="@+id/rectRequired"/>

        <ImageView
            android:id="@+id/rectCarbo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rect_carbo"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/rectRequired"
            app:layout_constraintStart_toStartOf="@id/layout_calorie_compute"/>

        <TextView
            android:id="@+id/carboText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#828282"
            android:lineSpacingExtra="16sp"
            android:text="탄수화물"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@id/rectCarbo"
            app:layout_constraintTop_toTopOf="@id/rectCarbo"
            app:layout_constraintBottom_toBottomOf="@id/rectCarbo"
            />

        <ImageView
            android:id="@+id/rectProtein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rect_protein"
            android:layout_marginStart="66dp"
            app:layout_constraintTop_toTopOf="@+id/rectCarbo"
            app:layout_constraintBottom_toBottomOf="@id/rectCarbo"
            app:layout_constraintStart_toEndOf="@id/rectCarbo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#828282"
            android:lineSpacingExtra="16sp"
            android:text="단백질"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@id/rectProtein"
            app:layout_constraintTop_toTopOf="@id/rectProtein"
            app:layout_constraintBottom_toBottomOf="@id/rectProtein"
            />


        <ImageView
            android:id="@+id/rectFat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rect_fat"
            android:layout_marginStart="66dp"
            app:layout_constraintTop_toTopOf="@+id/rectCarbo"
            app:layout_constraintBottom_toBottomOf="@id/rectCarbo"
            app:layout_constraintStart_toEndOf="@id/rectProtein"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#828282"
            android:lineSpacingExtra="16sp"
            android:text="지방"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@id/rectFat"
            app:layout_constraintTop_toTopOf="@id/rectFat"
            app:layout_constraintBottom_toBottomOf="@id/rectFat"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>